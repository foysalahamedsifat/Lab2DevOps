pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'foysalahamedsifat/lab2devops:latest'
        DOCKER_CREDENTIALS_ID = 'dckr_pat_Xs-Q8ETJK6KMYj7vnmEGlFGjK7Y'  // Update this with your Jenkins credential ID
    }

    tools {
        maven 'Maven3'  // Assuming you configured Maven under Global Tools in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/foysalahamedsifat/Lab2DevOps.git',
                    credentialsId: "${DOCKER_CREDENTIALS_ID}",
                    branch: 'main'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIALS_ID}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PAT')]) {
                    powershell '''
                        Write-Host "Logging into Docker Hub..."
                        docker logout
                        $env:DOCKER_PAT | docker login -u $env:DOCKER_USER --password-stdin
                    '''
                }
            }
        }

        stage('Docker Build') {
            steps {
                bat "docker build -t ${DOCKER_IMAGE} ."
            }
        }

        stage('Docker Push') {
            steps {
                bat "docker push ${DOCKER_IMAGE}"
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            bat 'docker logout'
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
