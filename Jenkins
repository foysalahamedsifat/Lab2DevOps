pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'foysalahamedsifat/lab2devops:latest'  // Change as per your DockerHub repo and tag
        DOCKER_CREDENTIALS_ID = 'dockerhub-pat'               // Jenkins Credentials ID (Docker Hub PAT stored here)
    }

    tools {
        maven 'Maven3'   // Jenkins Global Tool Configuration > Maven3 (you can change the name if needed)
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/foysalahamedsifat/Lab2DevOps.git', branch: 'main'
            }
        }

        stage('Build Maven Project') {
            steps {
                bat 'mvn clean package'  // Use 'sh' instead of 'bat' if using Linux agents
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKER_CREDENTIALS_ID}",
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PAT'
                )]) {
                    powershell """
                        Write-Host "Logging into Docker Hub..."
                        docker logout
                        \$ErrorActionPreference = "Stop"

                        Write-Host "Using Docker username: \$env:DOCKER_USER"
                        echo \$env:DOCKER_PAT | docker login -u \$env:DOCKER_USER --password-stdin
                    """
                }
            }
        }

        stage('Docker Build') {
            steps {
                powershell """
                    Write-Host "Building Docker Image..."
                    docker build -t ${env.DOCKER_IMAGE} .
                """
            }
        }

        stage('Docker Push') {
            steps {
                powershell """
                    Write-Host "Pushing Docker Image to Docker Hub..."
                    docker push ${env.DOCKER_IMAGE}
                """
            }
        }
    }

    post {
        always {
            powershell 'docker logout'
        }
        success {
            echo "Pipeline completed successfully! üöÄ"
        }
        failure {
            echo "Pipeline failed! ‚ùå"
        }
    }
}
