pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'foysalahamedsifat/lab2devops:latest'
        DOCKER_CREDENTIALS_ID = 'dockerhub-pat'
    }

    tools {
        maven 'Maven3'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/foysalahamedsifat/Lab2DevOps.git', branch: 'main'
            }
        }

        stage('Build Maven Project') {
            steps {
                bat """
                    @echo off
                    echo ================================================
                    echo Building the Maven Project...
                    mvn clean package
                    IF %ERRORLEVEL% NEQ 0 (
                        echo Maven build failed!
                        exit /b 1
                    )
                """
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKER_CREDENTIALS_ID}",
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PAT'
                )]) {
                    bat """
                        @echo off
                        echo ================================================
                        echo Logging into Docker Hub...
                        docker logout > nul 2>&1
                        echo ================================================
                        echo Using Docker username: %DOCKER_USER%
                        echo PAT starts with: %DOCKER_PAT:~0,10%*******
                        echo ================================================
                        echo %DOCKER_PAT% | docker login -u %DOCKER_USER% --password-stdin

                        IF %ERRORLEVEL% NEQ 0 (
                            echo Docker login failed!
                            exit /b 1
                        ) ELSE (
                            echo Docker login successful!
                        )
                    """
                }
            }
        }

        stage('Docker Build') {
            steps {
                bat """
                    @echo off
                    echo ================================================
                    echo Building Docker Image...
                    docker build -t %DOCKER_IMAGE% .

                    IF %ERRORLEVEL% NEQ 0 (
                        echo Docker build failed!
                        exit /b 1
                    ) ELSE (
                        echo Docker build successful!
                    )
                """
            }
        }

        stage('Docker Push') {
            steps {
                bat """
                    @echo off
                    echo ================================================
                    echo Pushing Docker Image to Docker Hub...
                    docker push %DOCKER_IMAGE%

                    IF %ERRORLEVEL% NEQ 0 (
                        echo Docker push failed!
                        exit /b 1
                    ) ELSE (
                        echo Docker push successful!
                    )
                """
            }
        }
    }

    post {
        always {
            bat """
                @echo off
                echo ================================================
                echo Logging out from Docker Hub...
                docker logout > nul 2>&1
            """
        }

        success {
            echo "✅ Pipeline completed successfully! 🚀"
        }

        failure {
            echo "❌ Pipeline failed! Please check the logs."
        }
    }
}
