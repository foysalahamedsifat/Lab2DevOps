pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'foysalahamedsifat/lab2devops:latest'  // DockerHub repo and tag
        DOCKER_CREDENTIALS_ID = 'dockerhub-pat'               // Jenkins Credentials ID (Docker Hub PAT stored here)
    }

    tools {
        maven 'Maven3'   // Jenkins Global Tool Configuration > Maven3
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/foysalahamedsifat/Lab2DevOps.git', branch: 'main'
            }
        }

        stage('Build Maven Project') {
            steps {
                bat """
                    @echo off
                    echo Building the Maven Project...
                    mvn clean package
                """
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKER_CREDENTIALS_ID}",
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PAT'
                )]) {
                    bat """
                        @echo off
                        echo Logging into Docker Hub...
                        docker logout
                        
                        echo Using Docker username: %DOCKER_USER%
                        echo %DOCKER_PAT% | docker login -u %DOCKER_USER% --password-stdin
                        
                        IF %ERRORLEVEL% NEQ 0 (
                            echo Docker login failed!
                            exit /b 1
                        )
                    """
                }
            }
        }

        stage('Docker Build') {
            steps {
                bat """
                    @echo off
                    echo Building Docker Image...
                    docker build -t %DOCKER_IMAGE% .
                    
                    IF %ERRORLEVEL% NEQ 0 (
                        echo Docker build failed!
                        exit /b 1
                    )
                """
            }
        }

        stage('Docker Push') {
            steps {
                bat """
                    @echo off
                    echo Pushing Docker Image to Docker Hub...
                    docker push %DOCKER_IMAGE%
                    
                    IF %ERRORLEVEL% NEQ 0 (
                        echo Docker push failed!
                        exit /b 1
                    )
                """
            }
        }
    }

    post {
        always {
            bat """
                @echo off
                echo Logging out from Docker Hub...
                docker logout
            """
        }

        success {
            echo "‚úÖ Pipeline completed successfully! üöÄ"
        }

        failure {
            echo "‚ùå Pipeline failed! Please check the logs."
        }
    }
}
