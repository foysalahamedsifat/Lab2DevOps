pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'foysalahamedsifat/lab2devops:latest'
        // Commenting out credentials for now
        // DOCKER_CREDENTIALS_ID = 'dockerhub-pat'
    }

    tools {
        maven 'Maven3'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/foysalahamedsifat/Lab2DevOps.git', branch: 'main'
            }
        }

        stage('Build Maven Project') {
            steps {
                bat """
                    @echo off
                    echo ================================================
                    echo Building the Maven Project...
                    mvn clean package
                    IF %ERRORLEVEL% NEQ 0 (
                        echo Maven build failed!
                        exit /b 1
                    )
                """
            }
        }

        stage('Docker Login (Hardcoded)') {
            steps {
                bat """
                    @echo off
                    echo ================================================
                    echo Logging into Docker Hub with HARDCODED credentials...
                    docker logout > nul 2>&1
                    echo ================================================
                    echo Using Docker username: foysalahamedsifat
                    echo PAT starts with: dckr_pat_-60YdNgoB7********
                    echo ================================================
                    echo dckr_pat_-60YdNgoB7Rzz0RnetwyCu4pu_8 | docker login -u foysalahamedsifat --password-stdin

                    IF %ERRORLEVEL% NEQ 0 (
                        echo Docker login failed!
                        exit /b 1
                    ) ELSE (
                        echo Docker login successful!
                    )
                """
            }
        }

        stage('Docker Build') {
            steps {
                bat """
                    @echo off
                    echo ================================================
                    echo Building Docker Image...
                    docker build -t %DOCKER_IMAGE% .

                    IF %ERRORLEVEL% NEQ 0 (
                        echo Docker build failed!
                        exit /b 1
                    ) ELSE (
                        echo Docker build successful!
                    )
                """
            }
        }

        stage('Docker Push') {
            steps {
                bat """
                    @echo off
                    echo ================================================
                    echo Pushing Docker Image to Docker Hub...
                    docker push %DOCKER_IMAGE%

                    IF %ERRORLEVEL% NEQ 0 (
                        echo Docker push failed!
                        exit /b 1
                    ) ELSE (
                        echo Docker push successful!
                    )
                """
            }
        }
    }

    post {
        always {
            bat """
                @echo off
                echo ================================================
                echo Logging out from Docker Hub...
                docker logout > nul 2>&1
            """
        }

        success {
            echo "âœ… Pipeline completed successfully! ğŸš€"
        }

        failure {
            echo "âŒ Pipeline failed! Please check the logs."
        }
    }
}
